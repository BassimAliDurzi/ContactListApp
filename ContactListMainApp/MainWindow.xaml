<Window x:Class="ContactListMainApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContactListMainApp"
        
        xmlns:models="clr-namespace:Business.Models;assembly=Business"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Contacts List Application" Height="800" Width="500">


    <Grid Margin="20" HorizontalAlignment="Center">

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>


        <StackPanel Grid.Row="0" Margin="0,15,0,0" >
            <Label Content="Create New Contact" HorizontalAlignment="Center" FontWeight="Bold"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Label Content="First Name" Width="100" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="10"/>
            <TextBox x:Name="FirstName" Padding="10" Width="300" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,46,0,46" Grid.RowSpan="3">
            <Label Content="Last Name" Width="100" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="10"/>
            <TextBox x:Name="LastName" Padding="10" Width="300" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Row="3" Orientation="Horizontal" Grid.ColumnSpan="3">
            <Label Content="Email" Width="100" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="10"/>
            <TextBox x:Name="Email" Padding="10" Width="300" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Row="3" Orientation="Horizontal" Grid.ColumnSpan="3" Margin="0,46,0,46" Grid.RowSpan="3">
            <Label Content="Phone No." Width="100" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="10"/>
            <TextBox x:Name="PhoneNumber" Padding="10" Width="300" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Row="5" Orientation="Horizontal" Grid.ColumnSpan="3">
            <Label Content="Street" Width="100" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="10"/>
            <TextBox x:Name="Street" Padding="10" Width="300" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Row="5" Orientation="Horizontal" Grid.ColumnSpan="3" Margin="0,46,0,46" Grid.RowSpan="3">
            <Label Content="Postal Code" Width="100" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="10"/>
            <TextBox x:Name="PostalCode" Padding="10" Width="300" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Row="7" Orientation="Horizontal" Grid.ColumnSpan="3">
            <Label Content="City" Width="100" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="10"/>
            <TextBox x:Name="City" Padding="10" Width="300" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        </StackPanel>

        <Button x:Name="AddContact" Grid.Row="8" Content="Add Contact" Click="AddContact_Click" Height="30" VerticalAlignment="Bottom" Margin="100,10" FontWeight="Bold"/>

        <ListView x:Name="ContactsList" Grid.Row="9" Margin="0" Width="400"  Height="150" Background="#FFE8E3E3">
            <ListView.ItemTemplate>
                <DataTemplate DataType="models:Contact">
                    <StackPanel>
                        <TextBlock Text="{Binding FullName}" Padding="5"/>
                        <TextBlock Text="{Binding Email}" Padding="5"/>
                        <TextBlock Text="{Binding PhoneNumber}" Padding="5"/>
                        <TextBlock Text="{Binding Address}" Padding="5"/>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>


    </Grid>

</Window>
